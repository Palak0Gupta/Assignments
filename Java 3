9.
package stringAssignment3;

public class Strjoin {
	public static void main(String[] args)
	{
		String s1=new String("Hello");
		String s2=new String("How are you?");
		String s=String.join(" ",s1,s2);
		System.out.println(s.toString());
	}

}

